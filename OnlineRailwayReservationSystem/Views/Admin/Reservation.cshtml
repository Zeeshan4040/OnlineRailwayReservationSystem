 <!-- Reservation Master Start -->


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <h5 class="mb-0">Reservation </h5>
                </div>
                <div class="d-flex justify-content-around">
                    <div>
                        <label for="">From:</label>
                        <select name="" class="border-2 rounded-2" id="">
                            <option value="">CST</option>
                            <option value="">BHI</option>
                            <option value="">GOA</option>
                        </select>
                    </div>
                    <div>
                        <label for="">To:</label>
                        <select name="" class="border-2 rounded-2" id="">
                            <option value="">CST</option>
                            <option value="">BHI</option>
                            <option value="">GOA</option>
                        </select>
                    </div>
                    <div>
                        <label for="">Date:</label>
                        <input type="date" class="border-2 rounded-2" name="" id="">
                    </div>

                    <input type="submit" class="btn btn-primary btn-sm" value="Find Train">
                </div>
                <br>
                <table class="table table-striped table-bordered table-info table-hover">
                    <thead>
                        <tr>
                            <th>Train No.</th>
                            <th>Train Name</th>
                            <th>Train Type</th>
                            <th>Mon To Sun</th>
                            <th>A1</th>
                            <th>A2</th>
                            <th>A3</th>
                            <th>Sleeper</th>
                            <th>General</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1001</td>
                            <td>SATABDI EXP</td>
                            <td>SUPER FAST</td>
                            <td>N|N|N|N|N|Y|N</td>
                            <td>10</td>
                            <td>2</td>
                            <td>0</td>
                            <td>15</td>
                            <td>20</td>
                            <td>
                                <a href="@Url.Action("ReservationBooking", "Admin")" class="btn btn-primary btn-sm">Edit</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Reservation Master End -->